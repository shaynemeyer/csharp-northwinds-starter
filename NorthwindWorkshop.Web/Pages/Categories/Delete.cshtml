@page
@model NorthwindWorkshop.Web.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = $"Delete Category - {Model.Category?.CategoryName}";
}

<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-4">
            <a asp-page="Index" class="text-blue-600 hover:text-blue-800" title="Back to categories">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </a>
            <h1 class="text-3xl font-bold text-red-600">Delete Category</h1>
        </div>
        <span class="badge badge-danger">ID: @Model.Category?.Id</span>
    </div>

    <!-- Warning Message -->
    <div class="card mb-6 border-red-200 bg-red-50">
        <div class="p-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-lg font-medium text-red-800">Are you sure you want to delete this category?</h3>
                    <div class="mt-2 text-sm text-red-700">
                        <p><strong>This action cannot be undone.</strong> All category information will be permanently removed from the system.</p>
                        @if (Model.Category?.Products.Any() == true)
                        {
                            <p class="mt-2"><strong>Warning:</strong> This category has @Model.Category.Products.Count product(s). Deleting this category may affect related product data.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Category Information Card -->
    <div class="card mb-8">
        <div class="p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-6 pb-2 border-b border-gray-200">Category Information</h2>
            <div class="grid grid-cols-1 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Category Name</label>
                    <div class="text-lg font-semibold text-gray-900">@Model.Category?.CategoryName</div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                    <div class="text-gray-900">@(Model.Category?.Description ?? "No description available")</div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Total Products</label>
                    <div class="text-gray-900">
                        <span class="badge @(Model.Category?.Products.Count > 0 ? "badge-info" : "badge-secondary")">
                            @(Model.Category?.Products.Count ?? 0) products
                        </span>
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Active Products</label>
                    <div class="text-gray-900">
                        @{
                            var activeProductCount = Model.Category?.Products.Where(p => !p.Discontinued).Count() ?? 0;
                        }
                        <span class="badge @(activeProductCount > 0 ? "badge-success" : "badge-secondary")">
                            @activeProductCount active products
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Information (if exists) -->
    @if (Model.Category?.Products.Any() == true)
    {
        <div class="card mb-8">
            <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Related Products</h2>
                <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4 mb-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-yellow-800">
                                This category has @Model.Category.Products.Count product(s) in the system.
                            </h3>
                            <div class="mt-2 text-sm text-yellow-700">
                                <p>Deleting this category may affect related product data. Please review the impact before proceeding.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-sm text-gray-600">
                    <p><strong>Total Products:</strong> @Model.Category.Products.Count</p>
                    <p><strong>Active Products:</strong> @Model.Category.Products.Where(p => !p.Discontinued).Count()</p>
                    <p><strong>Discontinued Products:</strong> @Model.Category.Products.Where(p => p.Discontinued).Count()</p>
                    @if (Model.Category.Products.Any(p => p.UnitPrice.HasValue))
                    {
                        var avgPrice = Model.Category.Products.Where(p => p.UnitPrice.HasValue).Average(p => p.UnitPrice!.Value);
                        <p><strong>Average Product Price:</strong> @avgPrice.ToString("C")</p>
                    }
                </div>

                @if (Model.Category.Products.Take(5).Any())
                {
                    <div class="mt-4">
                        <h4 class="text-sm font-medium text-gray-700 mb-2">Sample Products:</h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                            @foreach (var product in Model.Category.Products.Take(5))
                            {
                                <div class="text-sm text-gray-600 p-2 bg-gray-50 rounded">
                                    <div class="font-medium">@product.ProductName</div>
                                    <div class="text-xs">
                                        @if (product.UnitPrice.HasValue)
                                        {
                                            <span>@product.UnitPrice.Value.ToString("C")</span>
                                        }
                                        @if (product.Discontinued)
                                        {
                                            <span class="ml-2 text-red-600">(Discontinued)</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        @if (Model.Category.Products.Count > 5)
                        {
                            <p class="text-xs text-gray-500 mt-2">...and @(Model.Category.Products.Count - 5) more products</p>
                        }
                    </div>
                }
            </div>
        </div>
    }

    <!-- Action Buttons -->
    <form method="post">
        <div class="flex justify-between items-center">
            <div class="flex space-x-3">
                <a asp-page="Index" class="btn-secondary">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Cancel
                </a>
                <a asp-page="Edit" asp-route-id="@Model.Category?.Id" class="btn-secondary">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125"></path>
                    </svg>
                    Edit Instead
                </a>
            </div>
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg flex items-center transition-colors">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1-1H8a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete Category
            </button>
        </div>
    </form>
</div>