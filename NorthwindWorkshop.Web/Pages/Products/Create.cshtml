@page
@model NorthwindWorkshop.Web.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Create New Product";
}

<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-4">
            <a asp-page="Index" class="text-blue-600 hover:text-blue-800" title="Back to products">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </a>
            <h1 class="text-3xl font-bold text-gray-900">Create New Product</h1>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="card mb-6 border-red-200 bg-red-50">
            <div class="p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">Please correct the following errors:</h3>
                        <div class="mt-2 text-sm text-red-700">
                            <ul class="list-disc list-inside">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <form method="post">
        <!-- Product Information Card -->
        <div class="card mb-8">
            <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 pb-2 border-b border-gray-200">Product Information</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Product.ProductName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Product.ProductName"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter product name">
                        <span asp-validation-for="Product.ProductName" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Product.CategoryId" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <select asp-for="Product.CategoryId"
                                asp-items="Model.Categories"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">Select a category</option>
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Product.SupplierId" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <select asp-for="Product.SupplierId"
                                asp-items="Model.Suppliers"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="">Select a supplier</option>
                        </select>
                        <span asp-validation-for="Product.SupplierId" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Product.QuantityPerUnit" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Product.QuantityPerUnit"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter quantity per unit (e.g., '10 boxes x 20 bags')">
                        <span asp-validation-for="Product.QuantityPerUnit" class="text-red-600 text-sm"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pricing and Inventory Card -->
        <div class="card mb-8">
            <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 pb-2 border-b border-gray-200">Pricing and Inventory</h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div>
                        <label asp-for="Product.UnitPrice" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Product.UnitPrice"
                               type="number"
                               step="0.01"
                               min="0"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="0.00">
                        <span asp-validation-for="Product.UnitPrice" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Product.UnitsInStock" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Product.UnitsInStock"
                               type="number"
                               min="0"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="0">
                        <span asp-validation-for="Product.UnitsInStock" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Product.UnitsOnOrder" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Product.UnitsOnOrder"
                               type="number"
                               min="0"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="0">
                        <span asp-validation-for="Product.UnitsOnOrder" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Product.ReorderLevel" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Product.ReorderLevel"
                               type="number"
                               min="0"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="0">
                        <span asp-validation-for="Product.ReorderLevel" class="text-red-600 text-sm"></span>
                    </div>
                    <div class="md:col-span-2">
                        <div class="flex items-center mt-6">
                            <input asp-for="Product.Discontinued"
                                   type="checkbox"
                                   class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                            <label asp-for="Product.Discontinued" class="ml-2 block text-sm text-gray-900">
                                Discontinued
                            </label>
                        </div>
                        <span asp-validation-for="Product.Discontinued" class="text-red-600 text-sm"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex justify-between items-center">
            <a asp-page="Index" class="btn-secondary">
                Cancel
            </a>
            <button type="submit" class="btn-primary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Create Product
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}