@page
@model NorthwindWorkshop.Web.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Edit Employee";
}

<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-4">
            <a asp-page="Index" class="text-blue-600 hover:text-blue-800" title="Back to employees">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </a>
            <h1 class="text-3xl font-bold text-gray-900">Edit Employee</h1>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="card mb-6 border-red-200 bg-red-50">
            <div class="p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">Please correct the following errors:</h3>
                        <div class="mt-2 text-sm text-red-700">
                            <ul class="list-disc list-inside">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <form method="post">
        <input asp-for="Employee.Id" type="hidden" />

        <!-- Personal Information Card -->
        <div class="card mb-8">
            <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 pb-2 border-b border-gray-200">Personal Information</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Employee.FirstName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Employee.FirstName"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter first name">
                        <span asp-validation-for="Employee.FirstName" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Employee.LastName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Employee.LastName"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter last name">
                        <span asp-validation-for="Employee.LastName" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Employee.TitleOfCourtesy" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Employee.TitleOfCourtesy"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="e.g., Mr., Ms., Dr.">
                        <span asp-validation-for="Employee.TitleOfCourtesy" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Employee.BirthDate" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Employee.BirthDate"
                               type="date"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <span asp-validation-for="Employee.BirthDate" class="text-red-600 text-sm"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Employment Information Card -->
        <div class="card mb-8">
            <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 pb-2 border-b border-gray-200">Employment Information</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Employee.Title" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Employee.Title"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter job title">
                        <span asp-validation-for="Employee.Title" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Employee.HireDate" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Employee.HireDate"
                               type="date"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <span asp-validation-for="Employee.HireDate" class="text-red-600 text-sm"></span>
                    </div>
                    <div class="md:col-span-2">
                        <label asp-for="Employee.ReportsTo" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <select asp-for="Employee.ReportsTo"
                                asp-items="Model.Managers"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        </select>
                        <span asp-validation-for="Employee.ReportsTo" class="text-red-600 text-sm"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Address Information Card -->
        <div class="card mb-8">
            <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 pb-2 border-b border-gray-200">Address Information</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="md:col-span-2">
                        <label asp-for="Employee.Address" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Employee.Address"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter street address">
                        <span asp-validation-for="Employee.Address" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Employee.City" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Employee.City"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter city">
                        <span asp-validation-for="Employee.City" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Employee.Region" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Employee.Region"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter region/state">
                        <span asp-validation-for="Employee.Region" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Employee.PostalCode" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Employee.PostalCode"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter postal code">
                        <span asp-validation-for="Employee.PostalCode" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Employee.Country" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Employee.Country"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter country">
                        <span asp-validation-for="Employee.Country" class="text-red-600 text-sm"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Information Card -->
        <div class="card mb-8">
            <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 pb-2 border-b border-gray-200">Contact Information</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Employee.HomePhone" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Employee.HomePhone"
                               type="tel"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter home phone number">
                        <span asp-validation-for="Employee.HomePhone" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Employee.Extension" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Employee.Extension"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Enter extension">
                        <span asp-validation-for="Employee.Extension" class="text-red-600 text-sm"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Information Card -->
        <div class="card mb-8">
            <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-6 pb-2 border-b border-gray-200">Additional Information</h2>
                <div>
                    <label asp-for="Employee.Notes" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <textarea asp-for="Employee.Notes"
                              rows="4"
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                              placeholder="Enter any additional notes about the employee..."></textarea>
                    <span asp-validation-for="Employee.Notes" class="text-red-600 text-sm"></span>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex justify-between items-center">
            <a asp-page="Index" class="btn-secondary">
                Cancel
            </a>
            <button type="submit" class="btn-primary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Update Employee
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}