@page
@model NorthwindWorkshop.Web.Pages.Employees.DeleteModel
@{
    ViewData["Title"] = $"Delete Employee - {Model.Employee?.FullName}";
}

<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-4">
            <a asp-page="Index" class="text-blue-600 hover:text-blue-800" title="Back to employees">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </a>
            <h1 class="text-3xl font-bold text-red-600">Delete Employee</h1>
        </div>
        <span class="badge badge-danger">ID: @Model.Employee?.Id</span>
    </div>

    <!-- Warning Message -->
    <div class="card mb-6 border-red-200 bg-red-50">
        <div class="p-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-lg font-medium text-red-800">Are you sure you want to delete this employee?</h3>
                    <div class="mt-2 text-sm text-red-700">
                        <p><strong>This action cannot be undone.</strong> All employee information will be permanently removed from the system.</p>
                        @if (Model.Subordinates.Any())
                        {
                            <p class="mt-2"><strong>Warning:</strong> This employee is a manager with @Model.Subordinates.Count subordinate(s). Those employees will be reassigned with no manager.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Employee Information Card -->
    <div class="card mb-8">
        <div class="p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-6 pb-2 border-b border-gray-200">Employee Information</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                    <div class="text-lg font-semibold text-gray-900">@Model.Employee?.FullName</div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
                    <div class="text-gray-900">@(Model.Employee?.Title ?? "N/A")</div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Title of Courtesy</label>
                    <div class="text-gray-900">@(Model.Employee?.TitleOfCourtesy ?? "N/A")</div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Hire Date</label>
                    <div class="text-gray-900">@(Model.Employee?.HireDate?.ToString("MMM dd, yyyy") ?? "N/A")</div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Home Phone</label>
                    <div class="text-gray-900">@(Model.Employee?.HomePhone ?? "N/A")</div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Extension</label>
                    <div class="text-gray-900">@(Model.Employee?.Extension ?? "N/A")</div>
                </div>
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Full Address</label>
                    <div class="text-gray-900">
                        @if (!string.IsNullOrEmpty(Model.Employee?.Address) || !string.IsNullOrEmpty(Model.Employee?.City) || !string.IsNullOrEmpty(Model.Employee?.Country))
                        {
                            <span>
                                @Model.Employee?.Address
                                @if (!string.IsNullOrEmpty(Model.Employee?.Address) && (!string.IsNullOrEmpty(Model.Employee?.City) || !string.IsNullOrEmpty(Model.Employee?.Country)))
                                {
                                    <br />
                                }
                                @Model.Employee?.City@(string.IsNullOrEmpty(Model.Employee?.Region) ? "" : $", {Model.Employee.Region}") @Model.Employee?.PostalCode
                                @if (!string.IsNullOrEmpty(Model.Employee?.City) && !string.IsNullOrEmpty(Model.Employee?.Country))
                                {
                                    <br />
                                }
                                @Model.Employee?.Country
                            </span>
                        }
                        else
                        {
                            <span>N/A</span>
                        }
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Employee?.Notes))
                {
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-1">Notes</label>
                        <div class="text-gray-900 bg-gray-50 p-3 rounded-lg">@Model.Employee.Notes</div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Subordinate Information (if exists) -->
    @if (Model.Subordinates.Any())
    {
        <div class="card mb-8">
            <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Reporting Employees</h2>
                <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4 mb-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-yellow-800">
                                This employee manages @Model.Subordinates.Count employee(s).
                            </h3>
                            <div class="mt-2 text-sm text-yellow-700">
                                <p>Deleting this employee will reassign their subordinates with no manager. You may want to reassign them to another manager first.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    @foreach (var subordinate in Model.Subordinates)
                    {
                        <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <div>
                                <div class="text-sm font-medium text-gray-900">@subordinate.FullName</div>
                                <div class="text-xs text-gray-500">@subordinate.Title</div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Action Buttons -->
    <form method="post">
        <div class="flex justify-between items-center">
            <div class="flex space-x-3">
                <a asp-page="Index" class="btn-secondary">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Cancel
                </a>
                <a asp-page="Edit" asp-route-id="@Model.Employee?.Id" class="btn-secondary">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit Instead
                </a>
            </div>
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg flex items-center transition-colors">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1-1H8a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete Employee
            </button>
        </div>
    </form>
</div>