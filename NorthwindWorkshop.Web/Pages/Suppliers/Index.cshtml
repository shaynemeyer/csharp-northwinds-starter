@page
@model NorthwindWorkshop.Web.Pages.Suppliers.IndexModel
@{
    ViewData["Title"] = "Suppliers";
}

<div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Suppliers</h1>
        <span class="badge badge-primary text-lg">
            @Model.Suppliers.Count @(Model.ShowEmpty ? "total" : "active") suppliers
        </span>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-6">
        <div class="p-6">
            <form method="get" class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label for="searchTerm" class="block text-sm font-medium text-gray-700 mb-2">Search Suppliers</label>
                    <input type="text"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                           id="searchTerm"
                           name="searchTerm"
                           value="@Model.SearchTerm"
                           placeholder="Search by company, contact, city, or country...">
                </div>
                <div class="flex items-end gap-4">
                    <div class="space-y-2">
                        <label class="block text-sm font-medium text-gray-700">Display Options</label>
                        <div class="flex gap-4">
                            <div class="flex items-center">
                                <input class="w-4 h-4 text-blue-600 focus:ring-blue-500"
                                       type="radio"
                                       id="activeOnly"
                                       name="showEmpty"
                                       value="false"
                                       checked="@(!Model.ShowEmpty)">
                                <label class="ml-2 text-sm text-gray-700" for="activeOnly">
                                    Active Suppliers Only
                                </label>
                            </div>
                            <div class="flex items-center">
                                <input class="w-4 h-4 text-blue-600 focus:ring-blue-500"
                                       type="radio"
                                       id="showAll"
                                       name="showEmpty"
                                       value="true"
                                       checked="@Model.ShowEmpty">
                                <label class="ml-2 text-sm text-gray-700" for="showAll">
                                    All Suppliers
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="flex items-end">
                    <button type="submit" class="btn-primary w-full">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Suppliers Table -->
    <div class="card">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Company Name
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Contact
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Location
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Phone
                        </th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Total Products
                        </th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Active Products
                        </th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Status
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var supplier in Model.Suppliers)
                    {
                        <tr class="@(supplier.ActiveProductCount == 0 ? "bg-gray-100" : "hover:bg-gray-50") transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">@supplier.CompanyName</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">@(supplier.ContactName ?? "N/A")</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-500">
                                    @if (!string.IsNullOrEmpty(supplier.City) || !string.IsNullOrEmpty(supplier.Country))
                                    {
                                        <span>@(supplier.City ?? "Unknown"), @(supplier.Country ?? "Unknown")</span>
                                    }
                                    else
                                    {
                                        <span>Location not specified</span>
                                    }
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-500">@(supplier.Phone ?? "N/A")</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <span class="text-sm font-medium text-gray-900">@supplier.ProductCount</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <span class="badge @(supplier.ActiveProductCount > 0 ? "badge-success" : "badge-secondary")">
                                    @supplier.ActiveProductCount
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                @if (supplier.ActiveProductCount == 0)
                                {
                                    <span class="badge badge-secondary">No Products</span>
                                }
                                else if (supplier.ActiveProductCount < 5)
                                {
                                    <span class="badge badge-warning">Limited Supply</span>
                                }
                                else
                                {
                                    <span class="badge badge-success">Active Supplier</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Suppliers.Any())
            {
                <div class="text-center py-12">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-6m-2 0h6m-6 0H9m3 0v-6" />
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">No suppliers found</h3>
                    <p class="mt-1 text-sm text-gray-500">Try adjusting your search or filter criteria.</p>
                </div>
            }
        </div>
    </div>
</div>