@page
@model NorthwindWorkshop.Web.Pages.Customers.DetailsModel
@{
    ViewData["Title"] = $"Customer Details - {Model.Customer?.CompanyName}";
}

<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-4">
            <a asp-page="Index" class="text-blue-600 hover:text-blue-800">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </a>
            <h1 class="text-3xl font-bold text-gray-900">Customer Details</h1>
        </div>
        <span class="badge badge-primary">ID: @Model.Customer?.Id</span>
    </div>

    <!-- Customer Information Card -->
    <div class="card mb-8">
        <div class="p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-6 pb-2 border-b border-gray-200">Company Information</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Company Name</label>
                    <div class="text-lg font-semibold text-gray-900">@Model.Customer?.CompanyName</div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Contact Name</label>
                    <div class="text-gray-900">@(Model.Customer?.ContactName ?? "N/A")</div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Contact Title</label>
                    <div class="text-gray-900">@(Model.Customer?.ContactTitle ?? "N/A")</div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
                    <div class="text-gray-900">@(Model.Customer?.Phone ?? "N/A")</div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Fax</label>
                    <div class="text-gray-900">@(Model.Customer?.Fax ?? "N/A")</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Address Information Card -->
    <div class="card mb-8">
        <div class="p-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-6 pb-2 border-b border-gray-200">Address Information</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Address</label>
                    <div class="text-gray-900">@(Model.Customer?.Address ?? "N/A")</div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">City</label>
                    <div class="text-gray-900">@(Model.Customer?.City ?? "N/A")</div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Region/State</label>
                    <div class="text-gray-900">@(Model.Customer?.Region ?? "N/A")</div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Postal Code</label>
                    <div class="text-gray-900">@(Model.Customer?.PostalCode ?? "N/A")</div>
                </div>
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Country</label>
                    <div class="text-gray-900">@(Model.Customer?.Country ?? "N/A")</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders Information Card -->
    <div class="card">
        <div class="p-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-semibold text-gray-900">Orders</h2>
                <span class="badge badge-info">@Model.Customer?.Orders.Count orders</span>
            </div>

            @if (Model.Customer?.Orders.Any() == true)
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Order ID
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Order Date
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Required Date
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Shipped Date
                                </th>
                                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Status
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var order in Model.Customer.Orders.OrderByDescending(o => o.OrderDate))
                            {
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">@order.Id</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">
                                            @(order.OrderDate?.ToString("MM/dd/yyyy") ?? "N/A")
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">
                                            @(order.RequiredDate?.ToString("MM/dd/yyyy") ?? "N/A")
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">
                                            @(order.ShippedDate?.ToString("MM/dd/yyyy") ?? "Not Shipped")
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        @if (order.ShippedDate.HasValue)
                                        {
                                            <span class="badge badge-success">Shipped</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Pending</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-12">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">No orders found</h3>
                    <p class="mt-1 text-sm text-gray-500">This customer has not placed any orders yet.</p>
                </div>
            }
        </div>
    </div>
</div>