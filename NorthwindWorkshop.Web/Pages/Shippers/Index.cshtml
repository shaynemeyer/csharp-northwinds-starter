@page
@model NorthwindWorkshop.Web.Pages.Shippers.IndexModel
@{
    ViewData["Title"] = "Shippers";
}

<div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Shippers</h1>
        <span class="badge badge-primary text-lg">@Model.Shippers.Count shippers</span>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-6">
        <div class="p-6">
            <form method="get" class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label for="searchTerm" class="block text-sm font-medium text-gray-700 mb-2">Search Shippers</label>
                    <input type="text"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                           id="searchTerm"
                           name="searchTerm"
                           value="@Model.SearchTerm"
                           placeholder="Search by company name or phone...">
                </div>
                <div class="flex items-end gap-4">
                    <div class="flex items-center">
                        <input class="w-4 h-4 text-blue-600 rounded focus:ring-blue-500"
                               type="checkbox"
                               id="showActiveOnly"
                               name="showActiveOnly"
                               value="true"
                               checked="@Model.ShowActiveOnly">
                        <label class="ml-2 text-sm text-gray-700" for="showActiveOnly">
                            Show Active Only
                        </label>
                    </div>
                </div>
                <div class="flex items-end">
                    <button type="submit" class="btn-primary w-full">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Shipper Table -->
    <div class="card">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Company Name
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Phone
                        </th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Total Orders
                        </th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Status
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var shipper in Model.Shippers)
                    {
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">@shipper.CompanyName</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-500">@shipper.Phone</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <span class="badge @(shipper.TotalOrders > 0 ? "badge-success" : "badge-secondary")">
                                    @shipper.TotalOrders
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                @if (shipper.HasActiveOrders)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Inactive</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Shippers.Any())
            {
                <div class="text-center py-12">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">No shippers found</h3>
                    <p class="mt-1 text-sm text-gray-500">Try adjusting your search or filter criteria.</p>
                </div>
            }
        </div>
    </div>
</div>